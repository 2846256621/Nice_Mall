<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fdj.nicemallbackend.system.mapper.StoreGoodsMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.fdj.nicemallbackend.system.entity.StoreGoods">
        <id column="business_id" property="businessId"/>
        <result column="goods_id" property="goodsId"/>
        <result column="store_goods_number" property="storeGoodsNumber"/>
        <result column="goods_sales_volume" property="goodsSalesVolume"/>
    </resultMap>
    <insert id="save">
        insert into m_store_goods
        values (#{businessId}, #{goodsId,jdbcType=BIGINT}, #{storeGoodsNumber}, #{goodsSalesVolume,jdbcType=BIGINT})
    </insert>
    <select id="selectBygoodsId" resultMap="BaseResultMap">
        select *
        from m_store_goods
        where goods_id = #{goodsId}
    </select>
    <select id="selectBybusinessId" resultMap="BaseResultMap">
        select *
        from m_store_goods
        where business_id = #{id}
    </select>
    <update id="decreaseStock">
        update m_store_goods
        <trim prefix="set" suffixOverrides=",">
            <trim prefix="store_goods_number=case" suffix="end,">
                <foreach collection="storages" item="storage" index="index">
                    <if test="storage.goodsNum!=null">
                        when goods_id=#{storage.goodsId} then store_goods_number-#{storage.goodsNum,jdbcType=INTEGER}
                    </if>
                </foreach>
            </trim>
            <trim prefix="store_sales_volume=case" suffix="end,">
                <foreach collection="storages" item="storage" index="index">
                    <if test="storage.goodsNum!=null">
                        when goods_id=#{storage.goodsId} then store_sales_volume+#{storage.goodsNum,jdbcType=INTEGER}
                    </if>
                </foreach>
            </trim>
        </trim>
        where
        <foreach collection="storages" separator="or" item="storage" index="index">
            goods_id=#{storage.goodsNum,jdbcType=INTEGER}
        </foreach>
    </update>
</mapper>
